<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="601.0" prefWidth="880.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.cotel.catherine.minipetrecipebookgui.controller.RecipeController">
    <children>
      <TextFlow fx:id="textPane" layoutX="274.0" layoutY="51.0" prefHeight="550.0" prefWidth="595.0" />
      <Label fx:id="recipeName" alignment="CENTER" layoutX="264.0" layoutY="5.0" prefHeight="46.0" prefWidth="616.0" text="Recipe Title">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Pane fx:id="paneMenu" prefHeight="601.0" prefWidth="264.0" styleClass="pane" stylesheets="@style.css">
         <children>
            <Button fx:id="buttonRecipeList" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#onButtonRecipeListClick" prefHeight="46.0" prefWidth="264.0" text="Список рецептов">
               <font>
                  <Font name="Monotype Corsiva" size="22.0" />
               </font>
            </Button>
            <Button fx:id="buttonThems" alignment="BASELINE_LEFT" layoutY="92.0" mnemonicParsing="false" onAction="#onButtonThemsClick" prefHeight="46.0" prefWidth="264.0" text="Темы">
               <font>
                  <Font name="Monotype Corsiva" size="22.0" />
               </font>
            </Button>
            <Button fx:id="buttonFavorites" alignment="BASELINE_LEFT" layoutY="138.0" mnemonicParsing="false" onAction="#onButtonFavoritesClick" prefHeight="46.0" prefWidth="264.0" text="Избранные">
               <font>
                  <Font name="Monotype Corsiva" size="22.0" />
               </font>
            </Button>
            <Button fx:id="buttonWeeklyMenu" alignment="BASELINE_LEFT" layoutY="46.0" mnemonicParsing="false" onAction="#onButtonWeeklyMenuClick" prefHeight="46.0" prefWidth="264.0" text="Меню на неделю">
               <font>
                  <Font name="Monotype Corsiva" size="22.0" />
               </font>
            </Button>
            <Button fx:id="buttonAddNewRecipe" alignment="BASELINE_LEFT" layoutY="184.0" mnemonicParsing="false" onAction="#onButtonAddNewRecipe" prefHeight="46.0" prefWidth="264.0" text="Добавить рецепт">
               <font>
                  <Font name="Monotype Corsiva" size="22.0" />
               </font>
            </Button>
         </children>
      </Pane>
    </children>
</AnchorPane>
